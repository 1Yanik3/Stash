// This is your Prisma schema file, learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CredentialsIcon {
  UsbFlashDrive
  Tablet
  Cellphone
  Laptop
  DesktopClassic
  Key
  KeyWireless
}

model CredentialsMetadata {
  id Int @id @default(autoincrement())

  icon CredentialsIcon
  name String

  Credentials Credentials[]
  InviteCodes InviteCodes[]
}

model Credentials {
  credentialID        Bytes               @unique
  credentialPublicKey Bytes               @unique
  counter             Int                 @default(0)
  Metadata            CredentialsMetadata @relation(fields: [credentialsMetadataId], references: [id])

  credentialsMetadataId Int @default(0)
}

model InviteCodes {
  id Int @id @default(autoincrement())

  code      String              @unique
  createdAt DateTime            @default(now())
  Metadata  CredentialsMetadata @relation(fields: [credentialsMetadataId], references: [id])
  duration  Int

  credentialsMetadataId Int
}

enum ClusterType {
  normal
  collection
  screenshots
}

model Clusters {
  id   Int         @id @default(autoincrement())
  name String      @unique
  icon String
  type ClusterType

  everythingGroupId Int?
  unsortedGroupId   Int?
  trashGroupId      Int?

  groups Groups[]
}

model Groups {
  id        Int      @id @default(autoincrement())
  cluster   Clusters @relation(fields: [clusterId], references: [id])
  name      String
  icon      String?
  collapsed Boolean  @default(false)

  children Groups[] @relation("group-hierarchy")
  parent   Groups?  @relation("group-hierarchy", fields: [parentId], references: [id])

  media Media[]

  clusterId Int
  parentId  Int?
}

model Media {
  id          String   @id
  type        String
  name        String
  date        DateTime @default(now())
  createdDate DateTime @default(now())
  group       Groups   @relation(fields: [groupId], references: [id])
  height      Int
  width       Int
  tags        Tags[]

  groupId Int
}

model Tags {
  id    Int     @id @default(autoincrement())
  name  String
  media Media[]
}
